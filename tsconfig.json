{
    "compilerOptions": {
      "target": "es2022",
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowJs": true,
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": false,
      "noImplicitAny": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*"
    ]
  }